                "1x",
                "2x",
                "4x",
                "8x",
                "16x",
                "32x"
            ],
            "observable": true,
            "readOnly": true
        },
        "pan": {
            "description": "The horizontal pan in degrees.",
            "type": "number",
            "observable": true
        }
    },
